<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    package="com.usupov.autopark">

    <!--<uses-sdk android:minSdkVersion="16" android:targetSdkVersion="25" />-->


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera2.autofocus"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <!--<meta-data android:name="api_url_cars" android:value="http://88.99.174.4:8080/api/cars"></meta-data>-->

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.PartsInActivity"
            android:label="@string/title_activity_part"
            android:theme="@style/AppTheme">

        </activity>

        <activity
            android:name=".activity.CarFoundActivity"
            android:label="@string/app_car_new">
        </activity>

        <activity
            android:name=".activity.CameraActivity"
            android:configChanges="orientation"
            android:label="@string/capture_image">
            <!-- android:screenOrientation="landscape" -->
        </activity>

        <activity
            android:name=".activity.CarNewActivity"
            android:label="@string/app_car_new">

        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".activity.PartActivity"
            android:label="@string/app_part">
        </activity>
    </application>

</manifest>