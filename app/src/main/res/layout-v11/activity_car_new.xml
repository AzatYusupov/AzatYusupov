<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context=".activity.CarNewActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <include
            android:id="@+id/toolbar_car_new"
            layout="@layout/toolbar_car_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:inputType="textCapCharacters|textNoSuggestions|textVisiblePassword"
                        android:ems="@android:integer/config_longAnimTime"
                        android:id="@+id/edittext_vin_number"
                        android:padding="10dp"
                        android:background="@color/colorWhite"
                        android:maxLength="17"
                        android:imeOptions="flagNoFullscreen"
                        android:elevation="6dp"
                        android:hint="VIN номер"
                        android:textCursorDrawable="@drawable/primarycolor_cursor"
                        android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm0123456789"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="right|center"
                        android:gravity="right"
                        android:translationZ="6dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/clearBtnImage"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/ic_close_black"
                            />
                        <ImageView
                            android:id="@+id/voiceBtnImage"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:src="@drawable/ic_keyboard_voice_black"
                            />
                    </LinearLayout>
                </FrameLayout>
                <TextView
                    android:id="@+id/tvVinError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginBottom="20dp"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:elevation="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"
                    android:textSize="18sp"
                    android:text="Искать по оригинальному каталогу" />
                <LinearLayout
                    android:id="@+id/brand"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:text="@string/title_brand"
                        android:gravity="left|center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/selectedBranName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="не выбрана"
                        android:gravity="right|center"
                        android:layout_marginRight="10dp"
                        android:textStyle="normal|bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/model"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:text="@string/title_model"
                        android:gravity="left|center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/selectedModelName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="не выбрана"
                        android:gravity="right|center"
                        android:layout_marginRight="10dp"
                        android:textStyle="normal|bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/year"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/listPreferredItemHeight"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:text="@string/title_year"
                        android:gravity="left|center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"
                        />

                    <TextView
                        android:id="@+id/selectedYear"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="не выбран"
                        android:gravity="right|center"
                        android:layout_marginRight="10dp"
                        android:textStyle="normal|bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>
            </LinearLayout>
            <Button
                android:visibility="gone"
                android:fontFamily="sans-serif"
                android:background="@drawable/save_button_bg"
                android:textColor="@color/textColorPrimary"
                android:text="@string/find"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:id="@+id/new_car_find_btn"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ProgressBar
                android:visibility="gone"
                android:theme="@style/AppTheme.PrimaryAccent"
                android:id="@+id/progress_select_catalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>