<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_car"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="@dimen/cardview_default_elevation"
    app:pressedTranslationZ="12dp"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/home_view"
        >
        <ImageView
            android:id="@+id/overflow"
            android:src="@drawable/ic_action_dots"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="30dp"
            />

        <ImageView
            android:id="@+id/item_car_thumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:elevation="2dp"
            android:layout_margin="8dp"
            android:layout_marginRight="20dp"
            />
        <ImageView
            android:src="@drawable/top_image_1"
            android:id="@+id/top_image_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:elevation="2dp"
            android:layout_margin="8dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_car_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/item_car_thumbnail"
            android:layout_toEndOf="@+id/item_car_thumbnail"
            android:layout_alignTop="@+id/overflow">

            <TextView
                android:textStyle="bold"
                android:id="@+id/item_car_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/item_car_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_car_full_name"
                android:textSize="12sp"
                />
            <ProgressBar
                android:id="@+id/progress_car"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:background="@android:color/white"
                android:layout_marginRight="70dp"
                android:progressDrawable="@drawable/progress_bar"
                android:max="100"
                android:progress="35"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>