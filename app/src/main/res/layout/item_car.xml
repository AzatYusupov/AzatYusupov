<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_car"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="@dimen/cardview_default_elevation"
    app:pressedTranslationZ="12dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/overflow"
            android:src="@drawable/ic_action_dots"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="30dp" />

        <ImageView
        android:id="@+id/item_car_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:elevation="2dp"
        android:layout_margin="8dp"
        android:layout_marginRight="20dp"
        />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_car_thumbnail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/item_car_thumbnail"
            android:layout_toEndOf="@+id/item_car_thumbnail"
            android:layout_alignTop="@+id/overflow">

            <TextView
                android:id="@+id/item_car_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/item_car_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_car_full_name"
                android:textSize="12sp"
                />

        </LinearLayout>

        <!--<ImageView-->
            <!--android:id="@+id/overflow"-->
            <!--android:layout_width="@dimen/ic_album_overflow_width"-->
            <!--android:layout_height="@dimen/ic_album_overflow_height"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@id/thumbnail"-->
            <!--android:layout_marginTop="@dimen/ic_album_overflow_margin_top"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/ic_dots" />-->

    </RelativeLayout>

</android.support.v7.widget.CardView>
