<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.usupov.autopark.activity.SignupActivity">
    <include
        layout="@layout/toolbar_signup"
        android:id="@+id/toolbar_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <!--Name Text-->
            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextInputLayout"
                android:id="@+id/nameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >
                <EditText
                    android:id="@+id/input_name"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="255"
                    android:imeOptions="flagNoFullscreen"
                    android:hint="Имя"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/nameHint"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                android:text="@string/hint_name"/>
            <View
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="10dp"/>
            <!--Email-->
            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextInputLayout"
                android:id="@+id/emailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >
                <EditText
                    android:id="@+id/input_email"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="255"
                    android:imeOptions="flagNoFullscreen"
                    android:hint="Email"/>
            </android.support.design.widget.TextInputLayout>

            <!--Password-->
            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextInputLayout"
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:counterEnabled="true"
                app:counterMaxLength="20">
                <EditText
                    android:id="@+id/input_password"
                    android:inputType="textPassword"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:imeOptions="flagNoFullscreen"
                    android:hint="Пароль"/>
            </android.support.design.widget.TextInputLayout>
            <View
                android:id="@+id/passwordView"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="15dp"/>
            <TextView
                android:id="@+id/passwordHint"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:visibility="gone"
                android:text="@string/hint_password"/>
            <!--&lt;!&ndash;Repeat password&ndash;&gt;-->
            <!--<android.support.design.widget.TextInputLayout-->
                <!--android:theme="@style/TextInputLayout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/repasswordlayout"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="8dp"-->
                <!--&gt;-->
                <!--<EditText-->
                    <!--android:id="@+id/input_repassword"-->
                    <!--android:inputType="textPassword"-->
                    <!--android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:maxLength="255"-->
                    <!--android:imeOptions="flagNoFullscreen"-->
                    <!--android:hint="Повторите пароль"/>-->
            <!--</android.support.design.widget.TextInputLayout>-->

            <TextView
                android:id="@+id/textRules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/mediumTextPrimary"
                android:textColorLink="@color/colorPrimary"
                />
            <!--Register Button-->
            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/apbRegisterBtn"
                android:layout_width="match_parent"
                android:text="Зарегистрироваться"
                android:elevation="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/colorWhite"
                custom:pb_colorComplete="@color/green_complete"
                custom:pb_colorNormal="@color/colorAccent"
                custom:pb_colorPressed="@color/red_error"
                custom:pb_colorProgress="@color/purple_progress"
                custom:pb_textComplete="Success"
                custom:pb_textProgress="@string/please_wait"
                custom:pb_textError="Error"
                custom:pb_colorError="@color/red_error"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
