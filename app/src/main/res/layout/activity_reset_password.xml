<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.usupov.autopark.activity.ResetPasswordActivity">
    >
    <include
        android:id="@+id/toolbar_reset_password"
        layout="@layout/toolbat_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutEmail"
                android:theme="@style/TextInputLayout"
                app:errorEnabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >
                <EditText
                    android:id="@+id/input_email"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="255"
                    android:gravity="center_vertical"
                    android:imeOptions="flagNoFullscreen"
                    android:hint="Email"/>
            </android.support.design.widget.TextInputLayout>

            <com.dd.processbutton.iml.ActionProcessButton
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:text="Восстановить пароль"
                android:elevation="8dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/colorWhite"
                custom:pb_colorComplete="@color/green_complete"
                custom:pb_colorNormal="@color/colorAccent"
                custom:pb_colorPressed="@color/red_error"
                custom:pb_colorProgress="@color/purple_progress"
                custom:pb_textComplete="Success"
                custom:pb_textProgress="@string/please_wait"
                custom:pb_textError="Error"
                custom:pb_colorError="@color/red_error"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
