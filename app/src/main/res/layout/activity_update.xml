<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:id="@+id/activity_update"
    android:background="@color/colorWhite"
    tools:context="com.usupov.autopark.activity.UpdateActivity">
    <ProgressBar
        android:id="@+id/pbUpdate"
        android:layout_gravity="center"
        android:theme="@style/AppTheme.PrimaryAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layoutUpdate"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:title="Личные данные"
            android:layout_height="wrap_content">
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="АККАУНТ"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="@dimen/btn_fab_size"
                            android:layout_height="@dimen/btn_fab_size"
                            android:src="@mipmap/ic_account"
                            app:fabSize="normal"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="@dimen/fab_margin"
                            app:borderWidth="0dp"
                            app:elevation="8dp"
                            app:backgroundTint="@color/colorPrimaryLight"
                            />
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/account_email"
                                android:text="79643818394@ya.ru"
                                android:textSize="20sp"
                                android:textColor="@color/primaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/account_name"
                                android:text="Алена Колпашникова"
                                android:textSize="16sp"
                                android:textColor="@color/secondaryText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="@dimen/btn_fab_size"
                            android:layout_height="@dimen/btn_fab_size"
                            android:src="@mipmap/ic_star"
                            app:fabSize="normal"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="@dimen/fab_margin"
                            app:borderWidth="0dp"
                            app:elevation="8dp"
                            app:backgroundTint="@color/colorWhite"
                            />
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/secondaryText"
                            android:text="Тариф Free"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"
                    />
                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical"
                    android:paddingRight="10dp"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="КОНТАКТЫ"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        />
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <!--<LinearLayout-->
                            <!--android:orientation="horizontal"-->
                            <!--android:gravity="center"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content">-->
                            <!--<ImageView-->
                                <!--android:layout_gravity="center"-->
                                <!--android:layout_width="100dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:src="@mipmap/ic_account_edit"-->
                                <!--/>-->
                            <!--<android.support.design.widget.TextInputLayout-->
                                <!--android:theme="@style/TextInputLayout"-->
                                <!--android:id="@+id/layout_edit_name"-->
                                <!--android:layout_gravity="center"-->
                                <!--android:layout_width="match_parent"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--&gt;-->
                                <!--<EditText-->
                                    <!--android:id="@+id/account_edit_name"-->
                                    <!--android:inputType="textCapSentences"-->
                                    <!--android:layout_width="match_parent"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:maxLength="255"-->
                                    <!--android:text="Алена Колпашникова"-->
                                    <!--android:imeOptions="flagNoFullscreen"-->
                                    <!--android:hint="Имя"/>-->
                            <!--</android.support.design.widget.TextInputLayout>-->
                        <!--</LinearLayout>-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_account_manager"/>
                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextInputLayout"
                                android:id="@+id/layout_edit_company"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <EditText
                                    android:id="@+id/account_edit_company"
                                    android:inputType="textCapSentences"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="255"
                                    android:text="Рога и копыта"
                                    android:imeOptions="flagNoFullscreen"
                                    android:hint="Компания"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_account_company"/>
                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextInputLayout"
                                android:id="@+id/layout_edit_manager"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <EditText
                                    android:id="@+id/account_edit_manager"
                                    android:inputType="textCapSentences"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="255"
                                    android:text="Алексей"
                                    android:imeOptions="flagNoFullscreen"
                                    android:hint="Менежер"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_account_phone"/>
                            <android.support.design.widget.TextInputLayout
                                android:theme="@style/TextInputLayout"
                                android:id="@+id/layout_edit_phone"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <EditText
                                    android:id="@+id/account_edit_phone"
                                    android:inputType="textCapSentences"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:maxLength="255"
                                    android:text="+7-964-381-83-94"
                                    android:imeOptions="flagNoFullscreen"
                                    android:hint="Телефон"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_marginTop="20dp"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_alignParentLeft="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Получать сообщения через Avito.ru"
                                android:textColor="@color/secondaryText"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium"
                                />
                            <ToggleButton
                                android:layout_alignParentRight="true"
                                android:id="@+id/account_edit_avito_mail"
                                android:layout_width="45dp"
                                android:layout_height="25dp"
                                android:elevation="8dp"
                                android:textOn=""
                                android:textOff=""
                                android:background="@drawable/toggle_selector"
                                android:clickable="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:id="@+id/account_edit_text_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimary"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:text="МЕСТОПОЛОЖЕНИЕ"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
