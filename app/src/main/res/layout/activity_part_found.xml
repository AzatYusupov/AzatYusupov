<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EDEEFA"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.usupov.autopark.activity.PartFoundActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar_car_found"
            layout="@layout/toolbar_car_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvPartFound"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="210dp">
                <LinearLayout
                    android:id="@+id/layout_parts_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="100dp">
                </LinearLayout>
            </HorizontalScrollView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Состояние*"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textCursorDrawable="@drawable/primarycolor_cursor"
                    android:imeOptions="flagNoFullscreen"
                    android:id="@+id/part_in_status"
                    android:padding="15dp"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    />

                <TextView
                    android:id="@+id/errorStatus"
                    android:visibility="gone"
                    android:text="@string/error_status_empty"
                    android:textColor="@color/squarecamera__red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:hint="Цена"
                        android:maxLength="18"
                        android:background="@color/colorWhite"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textCursorDrawable="@drawable/primarycolor_cursor"
                        android:imeOptions="flagNoFullscreen"
                        android:id="@+id/part_in_price"
                        android:padding="15dp"
                        android:inputType="number"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/ic_rouble"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/errorPrice"
                    android:visibility="gone"
                    android:text="@string/error_status_empty"
                    android:textColor="@color/squarecamera__red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Место на складе"
                    android:background="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:textCursorDrawable="@drawable/primarycolor_cursor"
                    android:imeOptions="flagNoFullscreen"
                    android:id="@+id/part_in_store"
                    android:padding="15dp"
                    android:inputType="text"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Комментарий"
                    android:textCursorDrawable="@drawable/primarycolor_cursor"
                    android:imeOptions="flagNoFullscreen"
                    android:gravity="top"
                    android:id="@+id/part_in_comment"
                    android:inputType="textMultiLine"
                    android:padding="15dp"
                    android:paddingBottom="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite"
                    android:scrollHorizontally="false"
                    />

                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/apbSavePart"
                    android:layout_width="match_parent"
                    android:text="Сохранить"
                    android:elevation="8dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="24dp"
                    android:textColor="@color/colorWhite"
                    custom:pb_colorComplete="@color/green_complete"
                    custom:pb_colorNormal="@color/colorAccent"
                    custom:pb_colorPressed="@color/red_error"
                    custom:pb_colorProgress="@color/purple_progress"
                    custom:pb_textComplete="Success"
                    custom:pb_textProgress="@string/please_wait"
                    custom:pb_textError="Error"
                    custom:pb_colorError="@color/red_error"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/btn_photo_part_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:onClick="onClickPhoto"
        android:src="@drawable/ic_stat_camera"
        android:backgroundTint="@color/colorPrimaryLight"
        app:fabSize="normal"
        android:scaleType="center"
        app:borderWidth="0dp" />

</android.support.design.widget.CoordinatorLayout>