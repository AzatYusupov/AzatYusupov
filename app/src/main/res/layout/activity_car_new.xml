<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:fitsSystemWindows="true"

    tools:context=".activity.CarNewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        >

       <include
            android:id="@+id/toolbar_new_car"
            layout="@layout/toolbar_car_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="@android:integer/config_longAnimTime"
            android:id="@+id/edittext_vin_number"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="8dp"
            android:hint="VIN номер"
            android:background="@color/colorWhite"
            android:drawableRight="@drawable/ic_keyboard_voice_black"
            />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>