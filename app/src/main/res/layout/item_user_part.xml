<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/item_user_part"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="@dimen/cardview_default_elevation"
    >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:id="@+id/item_user_part_home_view">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Запчасть к "-->
                <!--android:layout_gravity="left"-->
                <!--style="@style/mediumTextPrimary"-->
                <!--/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_user_part_car_name"
                android:text="CarName"
                android:layout_gravity="left"
                style="@style/mediumTextPrimary"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_user_part_part_name"
            android:text="PartName"
            style="@style/tittleText"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="3"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Подходит для:"
                    style="@style/mediumTextSecondary"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_user_part_suit"
                    android:text="Hyundai Coupe II (GK) (2002–2007)"
                    android:layout_gravity="left"
                    style="@style/mediumTextPrimary"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Номер: "
                        style="@style/mediumTextSecondary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_user_part_article"
                        android:text="60729300"
                        style="@style/mediumTextPrimary"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Состояние: "
                        style="@style/mediumTextSecondary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_user_part_status"
                        android:text="хорошое"
                        style="@style/mediumTextPrimary"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Комментарий: "
                        style="@style/mediumTextSecondary"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_user_part_comment"
                        android:text="хорошее состояние"
                        style="@style/mediumTextPrimary"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Место: "
                        style="@style/mediumTextSecondary"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_user_part_place"
                        android:text="1Р23HL"
                        style="@style/mediumTextPrimary"
                        />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:id="@+id/item_user_part_image"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>